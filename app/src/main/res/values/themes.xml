<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ViteMaDose" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="android:textColorPrimary">@color/mine_shaft</item>
        <item name="android:textColorSecondary">@color/scorpion</item>
        <item name="android:textColorTertiary">@color/gray</item>
        <!-- Primary brand color. -->
        <item name="colorAccent">@color/roman</item>
        <item name="colorPrimary">@color/roman</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/roman</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/splash_drawable</item>

        <item name="separatorColor">@color/grey_5</item>
        <item name="iconTintColor">@color/scorpion</item>
        <item name="backgroundColor">@color/grey_3</item>
        <item name="backgroundCardColor">@color/white</item>
        <item name="backgroundCardColorSecondary">@color/grey_5</item>
        <item name="colorControlActivated">@color/roman</item>
        <item name="chronodoseBackgroundColor">@color/vanilla_ice</item>
        <item name="chronodoseTextColor">@color/roman</item>

        <item name="disclaimerInfoTextColor">@color/scorpion</item>
        <item name="disclaimerInfoBackgroundColor">@color/white</item>
        <item name="disclaimerWarningTextColor">@color/crete</item>
        <item name="disclaimerWarningBackgroundColor">@color/half_colonial_white</item>
        <item name="disclaimerErrorTextColor">@color/roman</item>
        <item name="disclaimerErrorBackgroundColor">@color/vanilla_ice</item>
    </style>

    <style name="Theme.ViteMaDose.WithoutBackground" parent="Theme.ViteMaDose">
        <item name="android:windowBackground">?attr/backgroundColor</item>
    </style>
</resources>