<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextStyle_header_about">
        <item name="android:paddingStart">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/sf_pro</item>
        <item name="android:textColor">?android:attr/textColorTertiary</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="TextStyle_baseline">
        <item name="fontFamily">@font/sf_pro_rounded</item>
        <item name="android:textScaleX">1.05</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="TextStyle_baseline_small">
        <item name="android:drawablePadding">16dp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:paddingStart">6dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="fontFamily">@font/sf_pro_rounded</item>
        <item name="android:textScaleX">1.05</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextStyle_date">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="fontFamily">@font/sf_pro</item>
        <item name="android:textScaleX">1.05</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextStyle_center">
        <item name="fontFamily">@font/sf_pro</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TextStyle_header_available">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextStyle_header_unavailable">
        <item name="android:textColor">?android:attr/textColorTertiary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:maxLines">3</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextStyle_stats_number">
        <item name="android:fontFamily">@font/sf_pro_rounded</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextStyle_stats_description">
        <item name="android:fontFamily">@font/sf_pro_rounded</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">?android:attr/textColorTertiary</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>